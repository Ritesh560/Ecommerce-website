{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["clients/**", "controllers/**", "helpers/**", "middlewares/**", "models/**", "routes/**", "cache.js", "rate-limiter.js", "roles.js"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}
